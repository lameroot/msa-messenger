    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/v1/auth/verify": {
      "post": {
        "summary": "Verify authentication token",
        "description": "Verifies the provided authentication token and returns the user ID if valid",
        "operationId": "AuthService_VerifyToken",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/authVerifyTokenResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/authVerifyTokenRequest"
            }
          }
        ],
        "tags": [
          "Authentication"
        ]
      }
    }
  },
  "definitions": {
    "authVerifyTokenRequest": {
      "type": "object",
      "properties": {
        "token": {
          "type": "string",
          "description": "The authentication token to verify"
        }
      }
    },
    "authVerifyTokenResponse": {
      "type": "object",
      "properties": {
        "valid": {
          "type": "boolean",
          "description": "Indicates whether the token is valid"
        },
        "userId": {
          "type": "string",
          "description": "The user ID associated with the token, if valid"
        }
      }
    },
    "protobufAny": {
      "type": "object",
      "properties": {
        "@type": {
          "type": "string"
        }
      },
      "additionalProperties": {}
    },
    "rpcStatus": {
